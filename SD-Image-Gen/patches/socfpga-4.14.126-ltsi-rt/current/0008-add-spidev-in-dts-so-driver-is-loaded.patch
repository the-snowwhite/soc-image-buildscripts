From: Holotronic <producer@holotronic.dk>
Date: Tue, 13 Oct 2020 16:27:25 +0200
Subject: [PATCH 08/12] add spidev in dts so driver is loaded

Signed-off-by: Holotronic <producer@holotronic.dk>
---
 arch/arm/boot/dts/socfpga.dtsi | 11 ++++++++++-
 1 file changed, 10 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/socfpga.dtsi b/arch/arm/boot/dts/socfpga.dtsi
index 021559f37099..9b9108a4bf80 100644
--- a/arch/arm/boot/dts/socfpga.dtsi
+++ b/arch/arm/boot/dts/socfpga.dtsi
@@ -827,9 +827,18 @@
 			reg = <0xfff01000 0x1000>;
 			interrupts = <0 155 4>;
 			num-cs = <4>;
+			tx-dma-channel = <&pdma 20>;
+			rx-dma-channel = <&pdma 21>;
 			clocks = <&spi_m_clk>;
 			resets = <&rst SPIM1_RESET>;
-			status = "disabled";
+			status = "okay";
+
+			spidev1: spidev@0 {
+				compatible = "rohm,dh2228fv";
+				reg = <0>;
+				spi-max-frequency = <100000000>;
+				enable-dma = <1>;
+			};
 		};
 
 		sysmgr: sysmgr@ffd08000 {
